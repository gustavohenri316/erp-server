{
  "swagger": "2.0",
  "info": {
    "title": "ERP",
    "description": "Documentation from API",
    "version": "1.0.0"
  },
  "basePath": "/",
  "paths": {
    "/api/user/login": {
      "post": {
        "tags": [
          "User"
        ],
        "description": "Autenticação de usuário e obtenção do token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "E-mail do usuário"
                  },
                  "password": {
                    "type": "string",
                    "description": "Senha do usuário"
                  }
                },
                "example": {
                  "email": "usuario@example.com",
                  "password": "senha123"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sucesso na autenticação, retorna o token e informações do usuário",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "description": "Token de autenticação"
                    },
                    "message": {
                      "type": "string",
                      "description": "Mensagem de sucesso"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string",
                          "description": "Nome do usuário"
                        },
                        "email": {
                          "type": "string",
                          "description": "E-mail do usuário"
                        },
                        "photo": {
                          "type": "string",
                          "description": "URL da foto do usuário"
                        },
                        "privileges": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "description": "Lista de privilégios do usuário"
                        }
                      }
                    }
                  },
                  "example": {
                    "token": "token_de_autenticacao_aqui",
                    "message": "Olá usuário",
                    "user": {
                      "name": "Nome do Usuário",
                      "email": "usuario@example.com",
                      "photo": "url_da_foto",
                      "privileges": [
                        "admin",
                        "editor"
                      ]
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Requisição inválida ou erro na autenticação",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Mensagem de erro"
                    }
                  },
                  "example": {
                    "message": "E-mail ou senha inválidos"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user/{userId}/profile": {
