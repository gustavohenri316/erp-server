          "400": {
            "description": "Requisição inválida ou erro na obtenção do perfil do usuário",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Mensagem de erro"
                    }
                  },
                  "example": {
                    "message": "Usuário não encontrado"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user/{userId}/password": {
      "patch": {
        "tags": [
          "User"
        ],
        "description": "Atualizar senha de um usuário pelo ID",
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
