              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/notifications/{userId}": {
      "get": {
        "tags": [
          "Notificações"
        ],
        "summary": "Obtém as notificações de um usuário",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "page",
            "in": "query",
            "required": false,
            "type": "integer"
          },
          {
            "name": "perPage",
            "in": "query",
            "required": false,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Notificações obtidas com sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "directNotifications": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Notification"
                  }
                },
                "globalNotifications": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Notification"
                  }
                },
                "directNotificationsCount": {
                  "type": "integer"
                },
                "globalNotificationsCount": {
                  "type": "integer"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao obter notificações",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/notifications/sent/{userId}": {
      "get": {
        "tags": [
          "Notificações"
        ],
        "summary": "Obtém as notificações enviadas por um usuário",
        "produces": [
          "application/json"
