                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Nome do usuário"
                    },
                    "photo": {
                      "type": "string",
                      "description": "URL da foto do usuário"
                    },
                    "email": {
                      "type": "string",
                      "description": "E-mail do usuário"
                    },
                    "id": {
                      "type": "string",
                      "description": "ID do usuário"
                    }
                  },
                  "example": {
                    "name": "Nome do Usuário",
