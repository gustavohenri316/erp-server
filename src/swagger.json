                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Mensagem de sucesso"
                    }
                  },
                  "example": {
                    "message": "Senha do usuário atualizada com sucesso!"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Requisição inválida ou erro na atualização da senha do usuário",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Mensagem de erro"
                    }
                  },
                  "example": {
                    "message": "A nova senha não foi fornecida"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/forgot/generate-code": {
      "post": {
        "tags": [
          "Recuperação de Senha"
        ],
        "summary": "Gera e envia o código de recuperação de senha",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email"
                }
              },
              "required": [
                "email"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Código de recuperação enviado com sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao gerar ou enviar o código de recuperação",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "E-mail não encontrado na tabela de usuários",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/forgot/verify-code": {
      "post": {
        "tags": [
          "Recuperação de Senha"
        ],
        "summary": "Verifica o código de recuperação de senha",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "code": {
                  "type": "string"
                }
              },
              "required": [
                "email",
                "code"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Código de recuperação válido",
            "schema": {
              "type": "object",
              "properties": {
                "userId": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao verificar o código de recuperação",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Código inválido para o e-mail fornecido",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/user": {
      "get": {
        "tags": [
          "User"
        ],
        "description": "Buscar usuários por nome ou ID",
        "parameters": [
          {
            "in": "query",
            "name": "name",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "id",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "page",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "in": "query",
            "name": "pageSize",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso na busca de usuários",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "user": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string",
                            "description": "Nome do usuário"
                          },
                          "email": {
                            "type": "string",
                            "description": "E-mail do usuário"
                          },
                          "photo": {
                            "type": "string",
                            "description": "URL da foto do usuário"
                          }
                        }
                      }
                    }
                  }
                },
                "example": [
                  {
                    "user": {
                      "name": "Nome do Usuário 1",
                      "email": "usuario1@example.com",
                      "photo": "url_da_foto1"
                    }
                  },
                  {
                    "user": {
                      "name": "Nome do Usuário 2",
                      "email": "usuario2@example.com",
                      "photo": "url_da_foto2"
                    }
                  }
                ]
              }
            }
          },
          "400": {
            "description": "Requisição inválida ou erro na busca de usuários",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Mensagem de erro"
                    }
                  },
                  "example": {
                    "message": "Usuário não encontrado"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "User"
        ],
        "description": "Cadastrar um novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "example": {
                "email": "novo_usuario@example.com",
                "password": "senha123",
                "name": "Novo Usuário",
                "photo": "url_da_foto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sucesso no cadastro do usuário",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Mensagem de sucesso"
                    }
                  },
                  "example": {
                    "message": "Usuário cadastrado com sucesso!"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Requisição inválida ou erro no cadastro do usuário",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Mensagem de erro"
                    }
                  },
                  "example": {
                    "message": "Erro ao cadastrar usuário"
                  }
                }
              }
            }
          }
        }
      }
    },
