    "/api/notifications": {
      "post": {
        "tags": [
          "Notificações"
        ],
        "summary": "Cria e envia uma notificação",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "receivedBy": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "message": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "sentBy": {
                  "type": "string"
                },
                "isGlobal": {
                  "type": "boolean"
                }
              },
              "required": [
                "message",
                "title",
                "sentBy"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Notificação enviada com sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao enviar notificação",
